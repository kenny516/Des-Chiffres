<!DOCTYPE html>
<html lang="en" ng-app="dechiffreApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dechiffre</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="h-full w-full bg-slate-200 bg-gradient-to-r from-cyan-300 to-blue-200 font-mono">
    <nav class="bg-sky-500 py-4">
        <div class="container mx-auto flex items-center justify-between">
            <!-- Logo -->
            <a href="#!/" class="text-2xl font-bold text-white">DECHIFFRE GAME</a>
            <!-- Liens de navigation -->
            <ul class="flex space-x-4">
                <li><a href="#!/jouer" class="text-white hover:text-gray-300">JOUER</a></li>
            </ul>
        </div>
    </nav>
        @RenderBody()
    </body>
<script src="/node_modules/angular/angular.min.js"></script>
<script src="/node_modules/angular-route/angular-route.min.js"></script>
<script src="~/js/app.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</html>
