@{
    Layout = null;
}
<main ng-controller="GameController" class="mt-5 flex h-full w-full flex-col items-center gap-5">
    <h1 class="text-center text-5xl text-black">
        Bienvenue dans le Jeu Dechiffre
    </h1>
    <div class="flex w-full justify-center">
        <button class="h-10 w-60 rounded-2xl border border-sky-500 bg-sky-500 text-white" ng-click="generateNumber()">
            Generer le Nombre
        </button>
    </div>
    <div class="mt-5 flex h-10 w-60 items-center justify-center rounded-xl border border-sky-500 text-2xl">
        {{game.targetNumber}}
    </div>
    <div class="grid-cols-7 mt-5 grid gap-4">
        <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-sky-800 text-white" ng-repeat="number in game.numbers">
            {{number}}
        </div>
    </div>

    <!-- chrono -->
    <div class="text-4xl font-semibold">
        <p>{{ ('0' + Math.floor(timeLeft / 60)).slice(-2) }}:{{ ('0' + timeLeft % 60).slice(-2) }}</p>
    </div>

    <section class="grid-cols-2 grid gap-8">
        <div class="rounded-2xl bg-sky-800" ng-repeat="player in game.players">
            <form class="flex h-80 w-80 flex-col items-center gap-10 rounded-2xl pb-8 pt-8" ng-submit="submitResults($index)">
                <label class="underline-offset-8 text-xl text-white underline">{{player.name}}</label>
                <input class="w-50 border-2 h-10 rounded-xl border-sky-500 text-center placeholder:text-2xl" type="number" ng-model="player.NbrChoice">
                <div class="flex w-full justify-center">
                    <button class="h-10 w-1/2 rounded-2xl border border-sky-500 bg-sky-500 text-white" type="submit">
                        VALIDER
                    </button>
                </div>
            </form>
        </div>
    </section>

    <!-- verification pour le gagnant -->
    <div ng-show="isTimeUp" ng-if="game.players && game.players.length > game.winner_not_verify">
        <div class="h-auto w-auto rounded-2xl bg-sky-800">
            <form class="flex flex-col items-center gap-7 rounded-2xl pb-8 pt-8">
                <label class="underline-offset-8 text-2xl text-white underline">
                    Verification du {{game.players[game.winner_not_verify].name}}
                </label>

                <h3 class="text-xl text-white">Nombre disponible</h3>
                <div class="grid-cols-7 grid h-20 content-center gap-7 pl-20 pr-20">
                    <div class="flex h-10 w-10 cursor-pointer items-center justify-center rounded-xl bg-white text-2xl font-bold text-sky-800"
                         ng-repeat="number in choice" ng-click="addOperator(number)">
                        {{number}}
                    </div>
                </div>

                <h3 class="text-xl text-white">Operation</h3>
                <div class="grid-cols-4 grid gap-5 p-5">
                    <div class="flex h-10 w-10 cursor-pointer items-center justify-center rounded-xl bg-white text-2xl font-bold text-sky-800"
                         ng-click="addOperator('+')">
                        +
                    </div>
                    <div class="flex h-10 w-10 cursor-pointer items-center justify-center rounded-xl bg-white text-2xl font-bold text-sky-800"
                         ng-click="addOperator('-')">
                        -
                    </div>
                    <div class="flex h-10 w-10 cursor-pointer items-center justify-center rounded-xl bg-white text-2xl font-bold text-sky-800"
                         ng-click="addOperator('*')">
                        x
                    </div>
                    <div class="flex h-10 w-10 cursor-pointer items-center justify-center rounded-xl bg-white text-2xl font-bold text-sky-800"
                         ng-click="addOperator('/')">
                        /
                    </div>
                </div>

                <h3 class="text-xl text-white">Valeur normale {{game.players[game.winner_not_verify].nbrChoice}}</h3>
                <p class="border-2 h-10 w-1/2 rounded-xl border-sky-500 text-center text-white placeholder:text-2xl">
                    {{verifChoice}}
                </p>

                <div class="flex w-full justify-center">
                    <button type="button" class="h-10 w-1/3 rounded-2xl border border-sky-500 bg-sky-500 text-white" ng-click="verify()">
                        CONFIRMER
                    </button>
                </div>
            </form>
        </div>

        <div ng-show="finishGame">
            <h1 class="text-3xl font-bold">
                {{playerWin.name}}
            </h1>
        </div>
    </div>
</main>
